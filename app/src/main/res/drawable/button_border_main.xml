<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">

        <shape android:shape="rectangle">
            <gradient android:angle="135" android:endColor="@android:color/holo_blue_bright" android:startColor="@android:color/darker_gray" />
            <corners android:radius="20dp" />
            <stroke android:width="2dp" android:color="@android:color/white" />
            <padding android:right="5dp" android:left="5dp" />
        </shape>

    </item>
    <item>

        <shape android:shape="rectangle">
            <padding android:right="5dp" android:left="5dp" />
            <gradient android:angle="225" android:endColor="@android:color/holo_red_dark" android:startColor="@android:color/darker_gray" />
            <corners android:radius="20dp" />
            <stroke android:width="2dp" android:color="@android:color/white" />
        </shape>

    </item>
</selector>