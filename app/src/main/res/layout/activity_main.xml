<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bitmesranewedit"
    android:fadingEdge="horizontal|vertical|none"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="20dp"
        android:dividerPadding="30dp"
        android:showDividers="middle">

        <Button
            android:id="@+id/syllabus"

            android:layout_width="165dp"
            android:layout_height="156dp"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintVertical_weight="1"
            android:layout_marginStart="15dp"
            android:background="@drawable/button_border_main"
            android:clickable="true"
            android:contentDescription="@string/course_syllabus"
            android:drawableTop="@drawable/ic_notebook"
            android:paddingTop="25dp"
            android:textSize="18sp"
            android:text="@string/course_syllabus"
            app:layout_constraintBaseline_toBaselineOf="@+id/gpacalculator"
            app:layout_constraintEnd_toStartOf="@+id/gpacalculator"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            android:focusable="true" />

        <Button
            android:id="@+id/gpacalculator"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintVertical_weight="1"

            android:layout_width="165dp"
            android:layout_height="156dp"
            android:layout_marginStart="12.5dp"
            android:layout_marginTop="140dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="459dp"
            android:textSize="19sp"
            android:background="@drawable/button_border_main"
            android:clickable="true"
            android:contentDescription="@string/course_syllabus"
            android:drawableTop="@drawable/ic_tax_1"
            android:paddingTop="25dp"
            android:gravity="center"
            android:focusable="true"
            android:text="@string/gpa_calculator"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/syllabus"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>